<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <translet name="/">
        <redirect path="/chat/"/>
    </translet>

    <translet name="/chat/">
        <echo id="page">
            <item name="headline">Text Chat Club</item>
            <item name="teaser">Chat with anyone you want, about anything you want, free.</item>
            <item name="include">chat/chat</item>
        </echo>
        <dispatch name="templates/default"/>
    </translet>

</aspectran>