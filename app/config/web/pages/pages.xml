<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <translet name="/">
        <echo id="page">
            <item name="include">pages/index</item>
        </echo>
        <dispatch name="templates/default"/>
    </translet>

    <translet name="/info">
        <echo id="page">
            <item name="include">pages/info_#{currentLang}</item>
        </echo>
        <dispatch name="templates/default"/>
    </translet>

    <translet name="/error/@{errorCode}">
        <echo id="page">
            <item name="include">pages/index</item>
        </echo>
        <dispatch name="templates/error"/>
    </translet>

</aspectran>