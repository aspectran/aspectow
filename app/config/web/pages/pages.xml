<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <translet name="/">
        <echo id="page">
            <item name="include">pages/index</item>
        </echo>
        <dispatch name="templates/default"/>
    </translet>

    <translet name="/lobby">
        <echo id="page">
            <item name="title">Lobby</item>
            <item name="include">pages/lobby</item>
        </echo>
        <dispatch name="templates/default"/>
    </translet>

    <translet name="/chat">
        <echo id="page">
            <item name="title">Chat room</item>
            <item name="include">pages/chat</item>
        </echo>
        <dispatch name="templates/default"/>
    </translet>

</aspectran>