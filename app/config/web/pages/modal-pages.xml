<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <bean id="pagesModalJspTemplate" class="com.aspectran.web.support.view.JspTemplateViewDispatcher">
        <description>
            Register a JSP Template View Dispatcher.
        </description>
        <properties>
            <item name="contentType">text/html</item>
            <item name="template">/WEB-INF/jsp/templates/modal.jsp</item>
            <item name="includePageKey">INCLUDE_PAGE</item>
        </properties>
    </bean>

    <translet name="/pages/modal/${filename}">
        <dispatch name="includes/${filename}" dispatcher="pagesModalJspTemplate"/>
    </translet>

</aspectran>